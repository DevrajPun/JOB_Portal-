<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>JobEntry - Job Portal</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet" />
    <link
      href="/lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/css/style2.css" rel="stylesheet" />
    <style>
      .bgcolor {
        display: block;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
      }
      @media only screen and (max-width: 600px) {
        .bgcolor {
          display: none;
          border-top-left-radius: 5px;
          border-bottom-left-radius: 5px;
        }
      }
    </style>
  </head>

  <body style="height: 100vh" class="d-flex align-items-center">
    <div class="container-fluid">
      <div class="container">
        <div class="col-lg-10 mx-auto">
          <div class="card shadow-lg">
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <img
                    class="bgcolor"
                    src="/img/login.png"
                    style="width: 100%; height: 100%; background-size: cover"
                    alt=""
                  />
                </div>
                <div class="col-lg-6 py-3">
                  <span class="d-flex justify-content-center mb-3"
                    ><img src="/img/logo.png" style="width: 100px" alt=""
                  /></span>
                  <h4 class="text-center">Sign-in Here</h4>
                  <% if(msg.length>0) { %>
                  <div class="alert alert-success"><%= msg %></div>
                  <%} %> <% if(msg1.length>0) { %>
                  <div class="alert alert-danger"><%= msg1 %></div>
                  <%} %>
                  <form action="/verifylogin" method="post">
                    <div class="form-row">
                      <div class="col-sm-10 mx-auto">
                        <input
                          type="email"
                          name="email"
                          placeholder="Email-Address"
                          class="form-control my-4 py-2 px-3"
                        />
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="col-sm-10 mx-auto">
                        <input
                          type="password"
                          name="password"
                          placeholder="******"
                          class="form-control my-4 py-2 px-3"
                        />
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="col-sm-10 mx-auto">
                        <button type="submit" class="btn btn-dark mb-3">
                          Login
                        </button>
                        <br />
                        <a href="/forget">Forget password</a>
                        <p>
                          Don't have an account?
                          <a href="/registration">Register here</a>
                        </p>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="js/main.js"></script>
  </body>
</html>
